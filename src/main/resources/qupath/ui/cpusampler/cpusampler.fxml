<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<fx:root alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="pausePlay" mnemonicParsing="false" onAction="#onPausePlayClicked" />
            <Region HBox.hgrow="ALWAYS" />
            <CheckComboBox fx:id="threadStates" title="Visible Threads" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TreeTableView fx:id="tree" showRoot="false" VBox.vgrow="ALWAYS">
        <columns>
          <TreeTableColumn fx:id="stackTraceColumn" prefWidth="500.0" sortable="false" text="Stacktrace" />
          <TreeTableColumn fx:id="stateColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="State" />
            <TreeTableColumn fx:id="totalTimeColumn" maxWidth="150.0" minWidth="75.0" prefWidth="75.0" text="Total time" />
        </columns>
         <columnResizePolicy>
            <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TreeTableView>
   </children>
</fx:root>
